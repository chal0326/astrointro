---
import MainLayout from "../layouts/MainLayout.astro"
const projects = [
  { name: 'Project 1', description: 'This is a cool project.', imageUrl: '/path/to/image1.jpg', link: '#'},
  { name: 'Project 2', description: 'Another cool project.', imageUrl: '/path/to/image2.jpg', link: '#' },
  // Add more projects as needed
];
---
<MainLayout>
  <style>
  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
    padding: 20px;
  }
  .portfolio-item {
    display: block;
    text-align: center;
    border: 1px solid #ccc;
    border-radius: 8px;
    padding: 10px;
    color: #ffffff;
    text-decoration: none;
  }
  .portfolio-item img {
    max-width: 100%;
    height: auto;
    border-radius: 5px;
  }
</style>

  <h1>My Portfolio</h1>
  <div class="portfolio-grid">
    {projects.map((project) => (
      <a href={project.link} class="portfolio-item" target="_blank" rel="noopener noreferrer">
        <img src={project.imageUrl} alt={project.name} />
        <h2>{project.name}</h2>
        <p>{project.description}</p>
      </a>
    ))}
  </div>
</MainLayout>


