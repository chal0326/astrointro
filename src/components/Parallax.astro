---
import 'tailwindcss/tailwind.css';
import 'atropos/css';
import Atropos from 'atropos'

---

<div class="atropos">
  <div class="atropos-scale">
    <div class="atropos-rotate">
      <div class="atropos-inner">
        <!--
        Element with negative offset will move in reverse direction,
        making it appear behind the scene
        -->
        <img src="/assets/background.png" data-atropos-offset="-1" />
        <!--
        Element with no offset will not move
        -->
        <img src="/assets/midground.png" data-atropos-offset="0" />
        <!--
        Element with positive offset will move in same direction,
        making it appear in front of the scene
        -->
        <img src="/assets/foreground.png" data-atropos-offset="1" />
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
  const Atropos = new Atropos('.atropos', {
    // Add your Atropos options here
  });
});
</script>
